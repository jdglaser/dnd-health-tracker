SELECT c.name,
    c.level,
    c.hit_points,
    cs.stat,
    cs.value,
    cc.class_name,
    cc.hit_dice_value,
    cc.class_level,
    cd.damage_type,
    cd.defense_type,
    ci.name,
    cim.affected_object,
    cim.affected_value
FROM operational.character c
LEFT JOIN operational.character_class cc ON c.id = cc.character_id
LEFT JOIN operational.character_stat cs ON c.id = cs.character_id
LEFT JOIN operational.character_defense cd ON c.id = cd.character_id
LEFT JOIN operational.character_item ci ON c.id = ci.character_id
LEFT JOIN operational.character_item_modifier cim ON ci.id = cim.character_item_id